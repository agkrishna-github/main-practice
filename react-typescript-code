User.txt

import {useState} from 'react'

type AuthUser = {
    name: string
    email: string
}

export const User = () => {
    const [user, setUser] = useState<AuthUser | null>(null)

    const handleLogin = () => {
        setUser({name: 'krishna', email:'krishna@gmail.com'})
    }
    const handleLogout = () => {
        setUser(null)
    }

    return(
        <div>
            <h1>{user?.name}</h1>
            <h1>{user?.email}</h1>
        </div>
    )
}

...........................

